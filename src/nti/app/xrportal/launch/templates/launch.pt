	<style>
	 :root {
	     --text-color: #494949;
	     --brand-color-rgb: 63 179 246;
	     --brand-color: rgb(var(--brand-color-rgb));
	     --debug-fg-color: #49494999;
	     --debug-border-color: #49494916;
	 }

	 html,
	 body {
	     color: var(--text-color);
	     font-family: "Open Sans", sans-serif;
	     font-size: 14px;
	     line-height: 19px;
	     margin: 0;
	 }

	 main {
	     background: white;
	     min-height: 100vh;
	     max-width: 768px;
	     margin: 0 auto;
	 }

	 header {
	     background: rgba(var(--brand-color-rgb) / 0.15);
	     padding: 15px 22px 15px 32px;
	     display: flex;
	     flex-wrap: wrap;
	     align-items: center;
	     gap: 25px;
	 }

	 .vr-icon {
	     max-width: 60px;
	 }

	 .text-code {
	     font-weight: 700;
	 }

	 .info {
	     max-width: 45ch;
	     margin-right: auto;
	 }

	 .button {
	     background: var(--brand-color);
	     color: white;
	     font-weight: 600;
	     text-decoration: none;
	     padding: 13px 21px;
	     border-radius: 4px;
	     position: relative;
	     display: inline-flex;
	     align-items: center;
	     line-height: 1;
	     flex: 0 0 auto;
	 }

	 .play::before {
	     content: "";
	     display: inline-block;
	     border: 12px solid transparent;
	     border-width: 6px 8px 6px 12px;
	     border-left-color: currentColor;
	     height: 0;
	     width: 0;
	 }

	 .qr-container {
	     display: block;
	     margin: 88px auto;
	     text-align: center;
	 }

	 .qr-container.hide {
	     display: none;
	 }

	 .qr {
	     width: clamp(120px, 400px, 100vw);
	 }

	 .qr .corners {
	     stroke: var(--brand-color);
	     stroke-width: 2px;
	 }

	 .code-text {
	     text-align: center;
	     margin-top: -1.5em;
	     line-height: 1.5em;
	     letter-spacing: 0.25px;
	     color: #000000;
	     font-weight: bold;
	     font-size: 24px;
	     
	 }

	 .finished-container {
	     display: block;
	     margin: 88px auto;
	     text-align: center;
	 }

	 .debug-container {
	     position: relative;
	     padding: 1rem;
	     max-width: 684px;
	     margin: 0 auto;
	 }

	 .debug-container label[for="debug"] {
	     position: absolute;
	     top: 0;
	     left: 0;
	     right: 0;
	     background: white;
	     padding: 1rem;
	     padding-left: 2rem;
	 }

	 #debug {
	     visibility: hidden;
	     position: absolute;
	 }

	 :not(:checked)+.debug-info {
	     display: none;
	 }

	 .debug-info {
	     padding-top: 2.5rem;
	     background: #f9f9f9;
	 }

	 .chevron {
	     font-size: 2em;
	     line-height: 0;
	     display: inline-block;
	     transform-origin: center;
	     animation: chevron-open 0.25s both;
	     animation-direction: reverse;
	     position: relative;
	     top: 3px;
	     left: 3px;
	 }

	 .chevron.open {
	     transform: rotate(-90deg);
	     top: 7px;
	     left: 3px;
	 }

	 .debug-items {
	     list-style: none;
	     margin: 0;
	     padding: 0 0 0 2em;
	     font-size: 12px;
	     font-weight: bold;
	     color: var(--debug-fg-color);
	 }

	 .debug-items > * {
	     padding: 1em;
	     display: flex;
	     gap: 2em;
	     overflow: hidden;
	     text-overflow: ellipsis;
	 }

	 .debug-items > :not(:last-child) {
	     border-bottom: 1px solid var(--debug-border-color);
	 }

	 @media (max-width: 660px) {
	     header {
		 flex-direction: column;
		 gap: 1rem;
	     }

	     .vr-icon {
		 max-width: 48px;
	     }

	     .info {
		 margin: 0 auto;
	     }

	     .qr-container {
		 margin: 48px auto;
	     }
	 }

	</style>
